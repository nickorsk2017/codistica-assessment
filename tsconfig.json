{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "esModuleInterop": true,
      "baseUrl": "./src",
      "rootDir": "src",
      "outDir": "dist",
      "allowJs": true,
      "resolveJsonModule": true,
      "paths": {
        "@modules/*": ["modules/*"]
      }
    },
    "exclude": ["node_modules"],
    "include": ["src"]
}